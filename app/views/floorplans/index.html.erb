<p id="notice"><%= notice %></p>

<h1>Listing Floorplans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @floorplans.each do |floorplan| %>
      <tr>
        <td><%= floorplan.name %></td>
        <td><%= floorplan.created_by %></td>
        <td><%= link_to floorplan do %>
			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			<% end %></td>
		<td><%= link_to floorplan, method: :delete, data: { confirm: 'Are you sure?' } 				do %>
			<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
			<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
