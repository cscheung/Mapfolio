<h1>Listing Floorplans</h1>

<div class="table-responsive">
  <table class="table table-striped" >
    <thead>
      <tr>
        <th>Name</th>
        <!-- <th>Created by</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @floorplans.each do |floorplan| %>
        <tr>
          <td><big><%= floorplan.name %></big></td>
          <!-- <td><big><%= floorplan.created_by %></big></td> -->
          
          <td>
            <div class="btn-group pull-right" role="group" >
              <%= link_to floorplan, class:"btn btn-default" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
                
              <%= link_to floorplan, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" do %>  
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
              </div>
          </td>
            
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="btn-group">
        <%= button_to('New Floor Plan', new_floorplan_path, :class => 'btn btn-lg btn-primary', :method => :get) %>
      </div>
      </div>
  </div>
</div>
