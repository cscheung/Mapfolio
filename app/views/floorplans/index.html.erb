<h1>My Floorplans</h1>

<div class="table-responsive">
  <table class="table table-striped" >
    <thead>
      <tr>
        <th>Name</th>
        <!-- <th>Created by</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @floorplans.each do |floorplan| %>

        <tr onclick="window.location.href = '<%= floorplan_path(floorplan) %>';" >

            <td class="text-left"><big><%= floorplan.name %></big></td>
            <td>
              <div class="btn-group pull-right" role="group" >
                                  
                <%= link_to floorplan, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" do %>  
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
                </div>
            </td>
          <% end %>
        </tr>

    </tbody>
  </table>
</div>

<p id="notice"><%= notice %></p>
